<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>bulgakov.locality.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>bulgakov.locality.filter.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/edit/user</url-pattern>
        <url-pattern>/delete/user</url-pattern>
        <url-pattern>/users</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>bulgakov.locality.filter.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/locality</url-pattern>
        <url-pattern>/infrastructure</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/cabinet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ChairmenFilter</filter-name>
        <filter-class>bulgakov.locality.filter.ChairmenFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ChairmenFilter</filter-name>
        <url-pattern>/create/infrastructure</url-pattern>
        <url-pattern>/create/locality</url-pattern>
        <url-pattern>/delete/infrastructure</url-pattern>
        <url-pattern>/delete/locality</url-pattern>
        <url-pattern>/edit/infrastructure</url-pattern>
        <url-pattern>/edit/locality</url-pattern>
    </filter-mapping>

</web-app>
